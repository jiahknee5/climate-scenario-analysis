{
  "name": "dual-map-testing-framework",
  "version": "1.0.0",
  "description": "Comprehensive testing framework for CLIMADA and Climate-OS dual-map implementations",
  "main": "automated-browser-test.js",
  "scripts": {
    "test": "node automated-browser-test.js",
    "test:climada": "node automated-browser-test.js climada",
    "test:climate-os": "node automated-browser-test.js climate-os",
    "test:all": "node automated-browser-test.js all",
    "test:performance": "node performance-test.js",
    "test:visual": "node visual-regression-test.js",
    "setup": "npm install && node setup-test-environment.js",
    "report": "node generate-test-report.js",
    "serve": "python3 -m http.server 8000",
    "test:quick": "node quick-validation-test.js"
  },
  "keywords": [
    "testing",
    "climate",
    "maps",
    "mapbox",
    "dual-map",
    "puppeteer",
    "browser-testing"
  ],
  "author": "Climate Analysis Team",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^21.0.0",
    "playwright": "^1.40.0",
    "jest": "^29.7.0",
    "jsdom": "^22.1.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  }
}